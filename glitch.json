{
    "install": "pip install --user -r requirement.txt",
    "start": "uvicorn main:app",
    "watch":{
        "ignore": [
            "\\.pyc$"
        ],
        "install": {
            "include": [
                "^requirement\\.txt$"
            ]
        },
        "restart":{
            "include":[
                "\\.py$",
                "^start\\.sh"
            ]
        },
        "throttle":1000
    }
}